<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".ui.splash.SplashActivity">

    <!-- Financial Pattern Background -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.1"
        android:scaleType="centerCrop"
        android:src="@drawable/financial_pattern"
        android:contentDescription="@string/financial_pattern" />

    <!-- Glassmorphism Blur Overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_glassmorphism_gradient" />

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="@dimen/screen_horizontal"
        android:paddingVertical="@dimen/screen_vertical">

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Money Bag Illustration -->
        <ImageView
            android:id="@+id/ivMoneyBag"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/money_bag"
            android:contentDescription="@string/money_bag_icon" />

        <!-- App Name -->
        <TextView
            android:id="@+id/tvAppName"
            style="@style/TextAppearance.H1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lg"
            android:text="@string/app_name"
            android:textColor="@color/primary_gold"
            android:textSize="32sp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Footer -->
        <TextView
            android:id="@+id/tvFooter"
            style="@style/TextAppearance.BodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_xs"
            android:text="@string/copyright_afrivest"
            android:textColor="@color/primary_gold" />

    </LinearLayout>

</FrameLayout>