<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleTextColor="@color/text_primary" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/screen_horizontal">

            <!-- Search Section -->
            <TextView
                style="@style/TextAppearance.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search Recipient"
                android:layout_marginTop="@dimen/spacing_md"
                android:visibility="gone" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.App.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_sm"
                android:visibility="gone"
                app:startIconDrawable="@drawable/ic_search">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextSearch"
                    style="@style/Widget.App.TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone or Email"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Manual Entry Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnManualEntry"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Manually"
                android:textColor="@color/primary_gold"
                app:icon="@drawable/ic_add"
                app:iconTint="@color/primary_gold" />

            <!-- Manual Entry Section -->
            <LinearLayout
                android:id="@+id/layoutManualEntry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    style="@style/TextAppearance.Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter Recipient Details"
                    android:layout_marginTop="@dimen/spacing_md" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.App.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextManualRecipient"
                        style="@style/Widget.App.TextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="+256700000000 or email@example.com"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSearchUser"
                    style="@style/Widget.App.Button.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:text="Search User"
                    android:layout_marginTop="@dimen/spacing_sm" />
            </LinearLayout>

            <!-- Contacts List -->
            <TextView
                android:visibility="gone"
                style="@style/TextAppearance.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Recipient"
                android:layout_marginTop="@dimen/spacing_lg" />

            <androidx.recyclerview.widget.RecyclerView
                android:visibility="gone"
                android:id="@+id/rvContacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_sm"
                android:nestedScrollingEnabled="false" />

            <TextView
                android:id="@+id/tvEmptyState"
                style="@style/TextAppearance.BodyRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No contacts found"
                android:textAlignment="center"
                android:textColor="@color/text_secondary"
                android:padding="@dimen/spacing_xl"
                android:visibility="gone" />

            <!-- Transfer Form -->
            <LinearLayout
                android:id="@+id/layoutTransferForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="@dimen/spacing_lg">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/border_default"
                    android:layout_marginVertical="@dimen/spacing_md" />

                <TextView
                    style="@style/TextAppearance.H3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transfer Details" />

                <!-- Recipient Info -->
                <TextView
                    style="@style/TextAppearance.Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recipient"
                    android:layout_marginTop="@dimen/spacing_md" />

                <TextView
                    android:id="@+id/tvRecipientName"
                    style="@style/TextAppearance.BodyLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recipient Name"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="@dimen/spacing_xs" />

                <TextView
                    android:id="@+id/tvRecipientIdentifier"
                    style="@style/TextAppearance.BodySmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone/Email"
                    android:textColor="@color/text_secondary" />

                <!-- Amount -->
                <TextView
                    style="@style/TextAppearance.Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount (UGX)"
                    android:layout_marginTop="@dimen/spacing_md" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.App.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextAmount"
                        style="@style/Widget.App.TextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter amount (min 10,000)"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>
                <!-- Description -->
                <TextView
                    style="@style/TextAppearance.Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description (Optional)"
                    android:layout_marginTop="@dimen/spacing_md" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.App.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextDescription"
                        style="@style/Widget.App.TextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="What's this for?"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Summary -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md"
                    android:background="@color/input_background"
                    android:layout_marginTop="@dimen/spacing_md">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextAppearance.BodyRegular"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Amount"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tvSummaryAmount"
                            style="@style/TextAppearance.BodyRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00 UGX"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/spacing_sm">

                        <TextView
                            style="@style/TextAppearance.BodyRegular"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Fee"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tvSummaryFee"
                            style="@style/TextAppearance.BodyRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00 UGX"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/border_default"
                        android:layout_marginVertical="@dimen/spacing_sm" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextAppearance.BodyLarge"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:id="@+id/tvSummaryTotal"
                            style="@style/TextAppearance.H3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00 UGX"
                            android:textColor="@color/primary_gold" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Error Message -->
                <TextView
                    android:id="@+id/textError"
                    style="@style/TextAppearance.BodyRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:textColor="@color/error_red"
                    android:visibility="gone" />

                <!-- Send Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSendMoney"
                    style="@style/Widget.App.Button.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:text="Send Money"
                    android:enabled="false"
                    android:layout_marginTop="@dimen/spacing_lg" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Loading Overlay -->
    <include
        android:id="@+id/loadingOverlay"
        layout="@layout/component_loading_overlay"
        android:visibility="gone" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>