<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/kycBanner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/screen_horizontal"
    android:layout_marginTop="@dimen/spacing_md"
    app:cardBackgroundColor="@color/input_background"
    app:cardCornerRadius="@dimen/radius_medium"
    app:cardElevation="0dp"
    app:strokeColor="@color/warning_yellow"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_md"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_shield"
            app:tint="@color/warning_yellow" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/spacing_sm"
            android:orientation="vertical">

            <TextView
                style="@style/TextAppearance.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KYC Verification Pending"
                android:textColor="@color/text_primary" />

            <TextView
                style="@style/TextAppearance.BodySmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complete KYC to unlock full features"
                android:textColor="@color/text_secondary" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCompleteKYC"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complete"
            android:textColor="@color/primary_gold"
            app:rippleColor="@color/primary_gold" />
    </LinearLayout>
</androidx.cardview.widget.CardView>