<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_md"
    app:cardBackgroundColor="@color/background_dark_1"
    app:strokeColor="@color/border_default"
    app:strokeWidth="1dp"
    app:cardCornerRadius="@dimen/radius_medium">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_md"
        android:gravity="center_vertical">

        <!-- Provider Logo -->
        <ImageView
            android:id="@+id/ivProviderLogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_insurance"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_icon_circle"
            app:tint="@color/primary_gold" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/spacing_md">

            <TextView
                android:id="@+id/tvProviderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="AAR Insurance" />

            <TextView
                android:id="@+id/tvProviderDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Comprehensive health and life insurance coverage" />

        </LinearLayout>

        <!-- Chevron -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_right"
            app:tint="@color/text_secondary"
            android:layout_marginStart="@dimen/spacing_sm" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>