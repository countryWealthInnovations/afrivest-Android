<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:fillViewport="true">

    <!-- KYC Banner -->
    <include
        android:layout_margin="@dimen/spacing_xs"
        android:id="@+id/kycBanner"
        layout="@layout/view_kyc_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.core.widget.NestedScrollView
        android:layout_below="@+id/kycBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="7dp"
            android:paddingTop="@dimen/spacing_md"
            android:paddingBottom="70dp">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- User Avatar and Name -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="50dp"
                        android:layout_height="50dp">

                        <!-- Avatar Image (shown when custom avatar exists) -->
                        <ImageView
                            android:id="@+id/ivUserAvatar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone"
                            android:scaleType="centerCrop"
                            android:contentDescription="@string/user_avatar" />

                        <!-- Avatar Circle Background -->
                        <View
                            android:id="@+id/vAvatarBackground"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_circle"
                            android:backgroundTint="#4DEFBF04"
                            android:visibility="visible" />

                        <!-- Avatar Initials (shown for default avatar) -->
                        <TextView
                            android:id="@+id/tvUserInitial"
                            style="@style/TextAppearance.H2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="U"
                            android:textColor="@color/primary_gold"
                            android:visibility="visible" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/spacing_md">

                        <TextView
                            android:id="@+id/tvUserName"
                            style="@style/TextAppearance.H3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="User"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:id="@+id/tvGreeting"
                            style="@style/TextAppearance.BodyRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Good morning!"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Circular Icons -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Bookmark Icon -->
                    <FrameLayout
                        android:id="@+id/btnBookmark"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackgroundBorderless">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_circle_stroke" />

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_bookmark"
                            app:tint="@color/text_secondary" />
                    </FrameLayout>

                    <!-- Notification Icon -->
                    <FrameLayout
                        android:id="@+id/btnNotification"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_marginStart="@dimen/spacing_md"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackgroundBorderless">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_circle_stroke" />

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_notification"
                            app:tint="@color/text_secondary" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Wallet Cards Section -->
            <LinearLayout
                android:id="@+id/llWalletCardsSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/spacing_lg">

                <!-- UGX Wallet Cards -->
                <LinearLayout
                    android:id="@+id/llUgxWallets"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- Deposit Wallet Card -->
                    <include
                        android:id="@+id/depositWalletCard"
                        layout="@layout/item_wallet_card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp" />

                    <!-- Interest Wallet Card -->
                    <include
                        android:id="@+id/interestWalletCard"
                        layout="@layout/item_wallet_card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <!-- Show/Hide Other Currencies Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnToggleOtherCurrencies"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:text="Show Other Currencies"
                    android:textColor="@color/primary_gold"
                    android:backgroundTint="#3A3A3A"
                    app:cornerRadius="@dimen/radius_medium"
                    app:icon="@drawable/ic_chevron_down"
                    app:iconGravity="textEnd"
                    app:iconTint="@color/primary_gold"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                <!-- Other Currency Wallets Container (Initially Hidden) -->
                <LinearLayout
                    android:id="@+id/llOtherCurrencies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:visibility="gone">

                    <!-- Will be populated dynamically with other currency cards -->

                </LinearLayout>
            </LinearLayout>

            <!-- Quick Actions Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/spacing_lg">

                <TextView
                    style="@style/TextAppearance.BodyLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quick Actions"
                    android:textColor="@color/text_primary" />

                <!-- Quick Actions RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvQuickActions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            </LinearLayout>

            <!-- Hot Investment Opportunities Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/spacing_lg">

                <TextView
                    style="@style/TextAppearance.BodyLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hot Investment Opportunities"
                    android:textColor="@color/text_primary" />

                <!-- Horizontal RecyclerView for Investment Cards -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvInvestments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
            </LinearLayout>

            <!-- Quick Send or Receive Money Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/spacing_lg">

                <TextView
                    style="@style/TextAppearance.BodyLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quick Send or Receive Money"
                    android:textColor="@color/text_primary" />

                <!-- Horizontal RecyclerView for Contacts -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvContacts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
            </LinearLayout>

            <!-- Loading Overlay -->
            <include
                android:id="@+id/loadingOverlay"
                layout="@layout/component_loading_overlay"
                android:visibility="gone" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



</RelativeLayout>