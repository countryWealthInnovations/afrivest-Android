<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="240dp"
    android:layout_height="200dp"
    android:layout_marginEnd="@dimen/spacing_md"
    app:cardBackgroundColor="#3A3A3A"
    app:cardCornerRadius="@dimen/radius_medium"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/spacing_md">

        <!-- Top Section: Logo and Company Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Logo -->
            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_chart"
                android:background="@drawable/bg_circle"
                android:backgroundTint="#4DEFBF04"
                android:padding="8dp"
                app:tint="@color/primary_gold" />

            <!-- Company and Type -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/spacing_sm">

                <TextView
                    android:id="@+id/tvCompanyName"
                    style="@style/TextAppearance.BodyRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Old Mutual Uganda"
                    android:textColor="@color/text_primary"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/tvInvestmentType"
                    style="@style/TextAppearance.BodySmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Treasury Bond"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Middle Section: Rate and Maturity -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/spacing_sm">

            <!-- Rate -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvRate"
                    style="@style/TextAppearance.BodyLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12.8% p.a"
                    android:textColor="@color/primary_gold" />

                <TextView
                    style="@style/TextAppearance.BodySmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Interest Rate"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <!-- Maturity -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/tvMaturity"
                    style="@style/TextAppearance.BodyRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1-3 Years"
                    android:textColor="@color/text_primary" />

                <TextView
                    style="@style/TextAppearance.BodySmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maturity"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/border_default"
            android:layout_marginVertical="@dimen/spacing_sm" />

        <!-- Bottom Section: Minimum Investment -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMinInvestment"
                style="@style/TextAppearance.BodyLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UGX 250,000"
                android:textColor="@color/primary_gold" />

            <TextView
                style="@style/TextAppearance.BodySmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minimum Investment"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="2dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>