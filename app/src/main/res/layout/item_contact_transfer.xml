<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/spacing_md"
    android:background="@color/input_background"
    android:layout_marginBottom="@dimen/spacing_sm">

    <!-- Avatar -->
    <TextView
        android:id="@+id/tvContactInitial"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="A"
        android:textSize="20sp"
        android:textColor="@color/primary_gold"
        android:background="@drawable/bg_circle_contact" />

    <!-- Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/spacing_md">

        <TextView
            android:id="@+id/tvContactName"
            style="@style/TextAppearance.BodyLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Name"
            android:textColor="@color/text_primary" />

        <TextView
            android:id="@+id/tvContactIdentifier"
            style="@style/TextAppearance.BodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone/Email"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tvRegistered"
            style="@style/TextAppearance.BodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœ“ Registered"
            android:textColor="@color/success_green"
            android:layout_marginTop="2dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvNotRegistered"
            style="@style/TextAppearance.BodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not on AfriVest"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="2dp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>