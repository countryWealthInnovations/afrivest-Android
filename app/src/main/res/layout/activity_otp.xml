<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/screen_horizontal"
        android:paddingVertical="@dimen/screen_vertical">

        <!-- Header -->
        <TextView
            style="@style/TextAppearance.H1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xxl"
            android:text="Verify Your Email"
            android:textColor="@color/text_primary" />

        <TextView
            style="@style/TextAppearance.BodyRegular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_sm"
            android:textColor="@color/text_secondary"
            android:text="Enter the 6-digit code sent to"/>

        <TextView
            android:id="@+id/tvEmail"
            style="@style/TextAppearance.BodyRegular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_gold"
            android:text="user@example.com" />

        <!-- OTP Boxes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lg"
            android:layout_marginBottom="@dimen/spacing_lg"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/otpBox1"
                style="@style/Widget.App.OTPBox"
                android:layout_width="@dimen/otp_box_size"
                android:layout_height="@dimen/otp_box_size" />

            <EditText
                android:id="@+id/otpBox2"
                style="@style/Widget.App.OTPBox"
                android:layout_width="@dimen/otp_box_size"
                android:layout_height="@dimen/otp_box_size"
                android:layout_marginStart="@dimen/spacing_sm" />

            <EditText
                android:id="@+id/otpBox3"
                style="@style/Widget.App.OTPBox"
                android:layout_width="@dimen/otp_box_size"
                android:layout_height="@dimen/otp_box_size"
                android:layout_marginStart="@dimen/spacing_sm" />

            <EditText
                android:id="@+id/otpBox4"
                style="@style/Widget.App.OTPBox"
                android:layout_width="@dimen/otp_box_size"
                android:layout_height="@dimen/otp_box_size"
                android:layout_marginStart="@dimen/spacing_sm" />

            <EditText
                android:id="@+id/otpBox5"
                style="@style/Widget.App.OTPBox"
                android:layout_width="@dimen/otp_box_size"
                android:layout_height="@dimen/otp_box_size"
                android:layout_marginStart="@dimen/spacing_sm" />

            <EditText
                android:id="@+id/otpBox6"
                style="@style/Widget.App.OTPBox"
                android:layout_width="@dimen/otp_box_size"
                android:layout_height="@dimen/otp_box_size"
                android:layout_marginStart="@dimen/spacing_sm" />

        </LinearLayout>

        <!-- Timer -->
        <TextView
            android:id="@+id/tvTimer"
            style="@style/TextAppearance.BodyRegular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Code expires in 10:00"
            android:textColor="@color/text_secondary" />

        <!-- Resend -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/TextAppearance.BodyRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Didn't receive the code? "
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/tvResend"
                style="@style/TextAppearance.BodyRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resend"
                android:textColor="@color/text_disabled"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:enabled="false" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Verify Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVerify"
            style="@style/Widget.App.Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:text="Verify"
            android:enabled="false" />

    </LinearLayout>

    <!-- Loading Overlay -->
    <include
        android:id="@+id/loadingOverlay"
        layout="@layout/component_loading_overlay"
        android:visibility="gone" />

</FrameLayout>