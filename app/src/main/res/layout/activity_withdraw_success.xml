<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient"
    android:padding="@dimen/screen_horizontal"
    android:gravity="center">

    <!-- Icon -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_checkmark_circle"
        android:contentDescription="Success"
        app:tint="@color/primary_gold" />

    <!-- Title -->
    <TextView
        style="@style/TextAppearance.H1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Withdrawal Initiated!"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/spacing_lg" />

    <!-- Message -->
    <TextView
        style="@style/TextAppearance.BodyLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your withdrawal is being processed"
        android:textColor="@color/text_secondary"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/spacing_sm" />

    <TextView
        style="@style/TextAppearance.BodyRegular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You will receive funds on your mobile money account"
        android:textColor="@color/text_secondary"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/spacing_xs"
        android:paddingHorizontal="@dimen/spacing_lg" />

    <!-- Transaction Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_md"
        android:background="@color/input_background"
        android:layout_marginTop="@dimen/spacing_xl">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TextAppearance.BodyRegular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reference"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/tvReference"
                style="@style/TextAppearance.BodyRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REF-XXX"
                android:textColor="@color/text_primary" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/border_default"
            android:layout_marginVertical="@dimen/spacing_md" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TextAppearance.BodyRegular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Amount"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/tvAmount"
                style="@style/TextAppearance.BodyLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00 UGX"
                android:textColor="@color/primary_gold" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/border_default"
            android:layout_marginVertical="@dimen/spacing_md" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TextAppearance.BodyRegular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Phone Number"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/tvPhoneNumber"
                style="@style/TextAppearance.BodyRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+256700000000"
                android:textColor="@color/text_primary" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Done Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDone"
        style="@style/Widget.App.Button.Primary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:text="Done" />

</LinearLayout>