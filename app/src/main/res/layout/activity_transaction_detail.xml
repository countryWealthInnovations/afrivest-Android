<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_dark_1"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Transaction Details"
            app:titleTextColor="@color/text_primary"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@color/text_primary" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_md">

            <!-- Status Badge -->
            <TextView
                android:id="@+id/tvStatus"
                style="@style/TextAppearance.BodySmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Success"
                android:textColor="@color/success_green"
                android:background="@drawable/status_badge"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:layout_marginBottom="@dimen/spacing_md" />

            <!-- Amount -->
            <TextView
                android:id="@+id/tvAmount"
                style="@style/TextAppearance.H3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="+ 50,000.00 UGX"
                android:textColor="@color/success_green"
                android:layout_marginBottom="@dimen/spacing_xl" />

            <!-- Transaction Details Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#3A3A3A"
                app:cardCornerRadius="@dimen/radius_medium"
                app:cardElevation="0dp"
                android:layout_marginBottom="@dimen/spacing_md">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <!-- Reference -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/spacing_md">

                        <TextView
                            style="@style/TextAppearance.BodyRegular"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Reference"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tvReference"
                            style="@style/TextAppearance.BodyRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TXN-123456"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/border_default"
                        android:layout_marginBottom="@dimen/spacing_md" />

                    <!-- Type -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/spacing_md">

                        <TextView
                            style="@style/TextAppearance.BodyRegular"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Type"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tvType"
                            style="@style/TextAppearance.BodyRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Deposit"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/border_default"
                        android:layout_marginBottom="@dimen/spacing_md" />

                    <!-- Date -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/spacing_md">

                        <TextView
                            style="@style/TextAppearance.BodyRegular"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Date"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tvDate"
                            style="@style/TextAppearance.BodyRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jan 15, 2025"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/border_default"
                        android:layout_marginBottom="@dimen/spacing_md" />

                    <!-- Description -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextAppearance.BodyRegular"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Description"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tvDescription"
                            style="@style/TextAppearance.BodyRegular"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Card deposit"
                            android:textColor="@color/text_primary"
                            android:gravity="end" />
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Payment Details Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#3A3A3A"
                app:cardCornerRadius="@dimen/radius_medium"
                app:cardElevation="0dp"
                android:layout_marginBottom="@dimen/spacing_md">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <TextView
                        style="@style/TextAppearance.BodyLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Payment Details"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="@dimen/spacing_md" />

                    <!-- Fee -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/spacing_md">

                        <TextView
                            style="@style/TextAppearance.BodyRegular"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Fee"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tvFee"
                            style="@style/TextAppearance.BodyRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00 UGX"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/border_default"
                        android:layout_marginBottom="@dimen/spacing_md" />

                    <!-- Total -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/spacing_md">

                        <TextView
                            style="@style/TextAppearance.BodyRegular"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tvTotal"
                            style="@style/TextAppearance.BodyLarge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50,000.00 UGX"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/border_default"
                        android:layout_marginBottom="@dimen/spacing_md" />

                    <!-- Payment Channel -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextAppearance.BodyRegular"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Payment Channel"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tvPaymentChannel"
                            style="@style/TextAppearance.BodyRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Flutterwave"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Recipient Details (for transfers) -->
            <LinearLayout
                android:id="@+id/llRecipient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#3A3A3A"
                    app:cardCornerRadius="@dimen/radius_medium"
                    app:cardElevation="0dp"
                    android:layout_marginBottom="@dimen/spacing_md">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_md">

                        <TextView
                            style="@style/TextAppearance.BodyLarge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Recipient Details"
                            android:textColor="@color/text_primary"
                            android:layout_marginBottom="@dimen/spacing_md" />

                        <!-- Recipient Name -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="@dimen/spacing_md">

                            <TextView
                                style="@style/TextAppearance.BodyRegular"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Name"
                                android:textColor="@color/text_secondary" />

                            <TextView
                                android:id="@+id/tvRecipientName"
                                style="@style/TextAppearance.BodyRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="John Doe"
                                android:textColor="@color/text_primary" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/border_default"
                            android:layout_marginBottom="@dimen/spacing_md" />

                        <!-- Recipient Email -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextAppearance.BodyRegular"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Email"
                                android:textColor="@color/text_secondary" />

                            <TextView
                                android:id="@+id/tvRecipientEmail"
                                style="@style/TextAppearance.BodyRegular"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="john@example.com"
                                android:textColor="@color/text_primary"
                                android:gravity="end" />
                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Additional Details Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#3A3A3A"
                app:cardCornerRadius="@dimen/radius_medium"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <TextView
                        style="@style/TextAppearance.BodyLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Additional Details"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="@dimen/spacing_md" />

                    <!-- External Reference -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/spacing_md">

                        <TextView
                            style="@style/TextAppearance.BodyRegular"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="External Ref"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tvExternalReference"
                            style="@style/TextAppearance.BodyRegular"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="N/A"
                            android:textColor="@color/text_primary"
                            android:gravity="end" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/border_default"
                        android:layout_marginBottom="@dimen/spacing_md" />

                    <!-- Completed At -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextAppearance.BodyRegular"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Completed At"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tvCompletedAt"
                            style="@style/TextAppearance.BodyRegular"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Not completed"
                            android:textColor="@color/text_primary"
                            android:gravity="end" />
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>