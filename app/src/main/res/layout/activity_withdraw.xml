<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleTextColor="@color/text_primary" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/screen_horizontal">

            <!-- Phone Number Input -->
            <TextView
                style="@style/TextAppearance.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:layout_marginTop="@dimen/spacing_lg" />

            <!-- Phone Number Input Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                android:layout_marginTop="@dimen/spacing_sm"
                android:orientation="horizontal"
                android:background="@color/input_background"
                android:gravity="center_vertical">

                <!-- Uganda Flag and Code (hardcoded) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/spacing_md">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‡ºðŸ‡¬"
                        android:textSize="20sp" />

                    <TextView
                        style="@style/TextAppearance.BodyLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="+256"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    android:background="@color/border_default" />

                <EditText
                    android:id="@+id/editTextPhone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/spacing_sm"
                    android:paddingEnd="@dimen/spacing_md"
                    android:background="@android:color/transparent"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_body_large"
                    android:inputType="phone"
                    android:maxLength="9"
                    android:hint="700000001"
                    android:textColorHint="@color/text_placeholder" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvPhoneHelper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MTN: 77, 78, 76, 79 | Airtel: 70, 74, 75"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="@dimen/spacing_xs" />

            <!-- Amount Input -->
            <TextView
                style="@style/TextAppearance.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount (UGX)"
                android:layout_marginTop="@dimen/spacing_md" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.App.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_sm">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextAmount"
                    style="@style/Widget.App.TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter amount (min 10,000)"
                    android:inputType="numberDecimal" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Fee Display Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_md"
                android:background="@color/input_background"
                android:layout_marginTop="@dimen/spacing_md"
                android:visibility="gone"
                android:id="@+id/feeSection">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/spacing_sm">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Amount"
                        style="@style/TextAppearance.BodyRegular"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/tvWithdrawAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextAppearance.BodyRegular"
                        android:textColor="@color/text_primary" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/spacing_sm">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Fee"
                        style="@style/TextAppearance.BodyRegular"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/tvFeeAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextAppearance.BodyRegular"
                        android:textColor="@color/text_primary" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/spacing_sm">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total Amount"
                        style="@style/TextAppearance.BodyLarge"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/tvTotalAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextAppearance.BodyLarge"
                        android:textColor="@color/primary_gold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Balance After Withdrawal"
                        style="@style/TextAppearance.BodyRegular"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/tvBalanceAfter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextAppearance.BodyRegular"
                        android:textColor="@color/success_green" />
                </LinearLayout>
            </LinearLayout>

            <!-- Error Message -->
            <TextView
                android:id="@+id/textError"
                style="@style/TextAppearance.BodyRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_md"
                android:textColor="@color/error_red"
                android:visibility="gone" />

            <!-- Info Text -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_md"
                android:background="@color/input_background"
                android:layout_marginTop="@dimen/spacing_md">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_info"
                    android:contentDescription="Info"
                    app:tint="@color/text_secondary" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/spacing_sm"
                    android:text="Funds will be sent to your mobile money account within 5 minutes"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/spacing_md"
                android:visibility="gone" />

            <!-- Withdraw Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnWithdraw"
                style="@style/Widget.App.Button.Primary"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:text="Withdraw"
                android:enabled="false"
                android:layout_marginBottom="@dimen/spacing_lg" />
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>