<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleTextColor="@color/text_primary" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/screen_horizontal">

        <!-- Payment Method Selector -->
        <TextView
            style="@style/TextAppearance.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Method"
            android:layout_marginTop="@dimen/spacing_lg" />

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/togglePaymentMethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_sm"
            app:singleSelection="true"
            app:selectionRequired="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMobileMoney"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_weight="1"
                android:text="Mobile Money"
                android:textColor="@color/text_primary"
                app:strokeColor="@color/primary_gold"
                android:checked="true" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCard"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_weight="1"
                android:text="Card Deposit"
                android:textColor="@color/text_primary"
                app:strokeColor="@color/primary_gold" />

        </com.google.android.material.button.MaterialButtonToggleGroup>

        <LinearLayout
            android:id="@+id/layoutMobileMoney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <!-- Phone Number Input -->
            <TextView
                style="@style/TextAppearance.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:layout_marginTop="@dimen/spacing_md" />

            <!-- Phone Number Input Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                android:layout_marginTop="@dimen/spacing_sm"
                android:orientation="horizontal"
                android:background="@color/input_background"
                android:gravity="center_vertical">

                <!-- Uganda Flag and Code (hardcoded) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/spacing_md">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‡ºðŸ‡¬"
                        android:textSize="20sp" />

                    <TextView
                        style="@style/TextAppearance.BodyLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="+256"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    android:background="@color/border_default" />

                <EditText
                    android:id="@+id/editTextPhone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/spacing_sm"
                    android:paddingEnd="@dimen/spacing_md"
                    android:background="@android:color/transparent"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_body_large"
                    android:inputType="phone"
                    android:maxLength="9"
                    android:hint="700000001"
                    android:textColorHint="@color/text_placeholder" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvPhoneHelperDeposit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MTN: 77, 78, 76, 79 | Airtel: 70, 74, 75"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="@dimen/spacing_xs" />

        </LinearLayout>

            <!-- Card Section -->
            <LinearLayout
                android:id="@+id/layoutCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Card Number -->
                <TextView
                    style="@style/TextAppearance.Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Card Number"
                    android:layout_marginTop="@dimen/spacing_md" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.App.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextCardNumber"
                        style="@style/Widget.App.TextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="1234 5678 9012 3456"
                        android:inputType="number"
                        android:maxLength="19" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Expiry and CVV Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/spacing_md">

                    <!-- Expiry Month -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="@dimen/spacing_sm">

                        <TextView
                            style="@style/TextAppearance.Label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Expiry Month" />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.App.TextInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_sm">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editTextExpiryMonth"
                                style="@style/Widget.App.TextInputEditText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="MM"
                                android:inputType="number"
                                android:maxLength="2" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- Expiry Year -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="@dimen/spacing_sm">

                        <TextView
                            style="@style/TextAppearance.Label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Expiry Year" />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.App.TextInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_sm">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editTextExpiryYear"
                                style="@style/Widget.App.TextInputEditText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="YY"
                                android:inputType="number"
                                android:maxLength="2" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- CVV -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/spacing_sm">

                        <TextView
                            style="@style/TextAppearance.Label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CVV" />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.App.TextInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_sm">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editTextCVV"
                                style="@style/Widget.App.TextInputEditText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="123"
                                android:inputType="numberPassword"
                                android:maxLength="3" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Amount Input -->
            <TextView
                style="@style/TextAppearance.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount (UGX)"
                android:layout_marginTop="@dimen/spacing_md" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.App.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_sm">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextAmount"
                    style="@style/Widget.App.TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter amount (min 5,000)"
                    android:inputType="numberDecimal" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Error Message -->
            <TextView
                android:id="@+id/textError"
                style="@style/TextAppearance.BodyRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_md"
                android:textColor="@color/error_red"
                android:visibility="gone" />

            <!-- Info Text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You will receive a prompt on your phone to approve the payment"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="@dimen/spacing_md"
                android:padding="@dimen/spacing_sm"
                android:background="@drawable/bg_input_field" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/spacing_md"
                android:visibility="gone" />

            <!-- Deposit Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeposit"
                style="@style/Widget.App.Button.Primary"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:text="Continue"
                android:enabled="false"
                android:layout_marginBottom="@dimen/spacing_lg" />
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>