<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Application Theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_gold</item>
        <item name="colorPrimaryDark">@color/background_dark_1</item>
        <item name="colorAccent">@color/primary_gold</item>
        <item name="android:windowBackground">@drawable/bg_gradient</item>
        <item name="android:statusBarColor">@color/background_dark_1</item>
        <item name="android:navigationBarColor">@color/background_dark_2</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Base Widget Style -->
    <style name="Widget.App" parent=""/>

    <!-- Text Styles -->
    <style name="TextAppearance.H1" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">@dimen/text_h1</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.H2" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">@dimen/text_h2</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.H3" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/text_h3</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.BodyLarge" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/text_body_large</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.BodyRegular" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">@dimen/text_body_regular</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.BodySmall" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">@dimen/text_body_small</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.Label" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">@dimen/text_body_regular</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Input Field Style -->
    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_stroke_color</item>
        <item name="boxStrokeWidth">@dimen/border_medium</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_medium</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_medium</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_medium</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_medium</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_placeholder</item>
        <item name="boxBackgroundColor">@color/input_background</item>
    </style>

    <style name="Widget.App.TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_body_large</item>
        <item name="android:minHeight">@dimen/input_height</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.App.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/bg_button_primary</item>
        <item name="android:textColor">@color/button_primary_text</item>
        <item name="android:textSize">@dimen/text_button</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/radius_medium</item>
        <item name="elevation">0dp</item>
    </style>

    <!-- OTP Box Style -->
    <style name="Widget.App.OTPBox">
        <item name="android:layout_width">@dimen/otp_box_size</item>
        <item name="android:layout_height">@dimen/otp_box_size</item>
        <item name="android:background">@drawable/bg_otp_box</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLength">1</item>
        <item name="android:inputType">number</item>
    </style>

    <!-- Bottom Navigation Active Indicator -->
    <style name="Widget.App.BottomNavigationView.ActiveIndicator" parent="">
        <item name="android:width">64dp</item>
        <item name="android:height">32dp</item>
        <item name="android:color">@color/primary_gold</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <!-- Shape for Active Indicator (Rounded Pill) -->
    <style name="ShapeAppearance.App.SmallComponent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>